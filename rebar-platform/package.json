{
  "name": "rebar-platform",
  "version": "0.1.0",
  "private": true,
  "packageManager": "pnpm@8.15.8",
  "scripts": {
    "dev:api": "pnpm --filter core-api dev",
    "dev:web": "pnpm --filter web-dashboard dev",
    "dev:tablet": "pnpm --filter field-tablet-app start",
    "dev:voice-agent": "pnpm --filter voice-sales-agent-api start",
    "dev:workspace-check": "pnpm list -r --depth -1",
    "lint": "pnpm -r lint",
    "test": "pnpm -r test",
    "prisma:generate": "pnpm --filter core-api prisma generate",
    "prisma:migrate": "pnpm --filter core-api prisma migrate dev"
  },
  "workspaces": [
    "apps/*",
    "services/*",
    "packages/*",
    "ai/*"
  ]
}
