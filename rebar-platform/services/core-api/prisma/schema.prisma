generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum PalletStatus {
  planned
  stacking
  stacked
  loaded
}

model User {
  id    String @id @default(cuid())
  email String @unique
  role  String
  shop  Shop? @relation(fields: [shopId], references: [id])
  shopId String?
}

model Shop {
  id   String @id @default(cuid())
  name String
  users User[]
  scrapFreeThresholdPercent Float @default(2.0)
  productionRuns ProductionRun[]
  projects Project[]
  palletConfig ShopPalletConfig?
  leads Lead[]
}

model ShopPalletConfig {
  shopId String @id
  defaultMaxPalletWeightLbs Float
  palletLengthIn Float
  palletWidthIn Float
  allowOverhangIn Float
  shop    Shop   @relation(fields: [shopId], references: [id])
}

model Project {
  id      String @id @default(cuid())
  name    String
  shop    Shop   @relation(fields: [shopId], references: [id])
  shopId  String
  productionRuns ProductionRun[]
  jobsheets JobSheet[]
  shapes   Shape[]
  pallets  Pallet[]
}

model JobSheet {
  id              String   @id @default(cuid())
  shopId          String
  projectId       String
  sourcePhotoPath String
  parsedAt        DateTime?
  status          String
  project         Project @relation(fields: [projectId], references: [id])
  shapes          Shape[]
}

model Shape {
  id                String   @id @default(cuid())
  projectId         String
  label             String
  barSize           String
  finalLengthInches Float
  quantity          Int
  maxLengthInches   Float?
  shapeType         String?
  // TODO: confirm whether shapes must remain linked to jobsheets; made optional until requirements are clarified.
  jobSheetId        String?
  project           Project @relation(fields: [projectId], references: [id])
  jobSheet          JobSheet? @relation(fields: [jobSheetId], references: [id])
  palletPieces      PalletPiece[]
  bendPlans BendPlan[]
  cutRuns   CutRun[]
  bendRuns  BendRun[]
}

model BendRule {
  id               String   @id @default(cuid())
  barSize          String
  angle            Float
  stretchAllowance Float
  effectiveFrom    DateTime
  effectiveTo      DateTime?
}

model CutPlan {
  id        String @id @default(cuid())
  barId     String
  nextBarId String?
  bar       Bar    @relation("BarCutPlans", fields: [barId], references: [id])
  nextBar   Bar?   @relation("NextBarCutPlan", fields: [nextBarId], references: [id])

  @@index([barId])
  @@index([nextBarId])
}

model BendPlan {
  id            String   @id @default(cuid())
  shapeId       String
  bendMarks     String
  feedLengths   String
  angleSequence String
  shape         Shape @relation(fields: [shapeId], references: [id])
}

model CutRun {
  id            String   @id @default(cuid())
  operatorId    String
  deviceId      String
  shapeId       String
  completedCount Int
  timestamp     DateTime @default(now())
  shape         Shape @relation(fields: [shapeId], references: [id])
}

model BendRun {
  id            String   @id @default(cuid())
  operatorId    String
  shapeId       String
  completedCount Int
  timestamp     DateTime @default(now())
  shape         Shape @relation(fields: [shapeId], references: [id])
}

model Pallet {
  id           String @id @default(cuid())
  projectId    String
  name         String
  maxWeightLbs Float
  totalWeightLbs Float
  status       PalletStatus
  overhangWarning Boolean? @default(false)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  project      Project @relation(fields: [projectId], references: [id])
  layers       PalletLayer[]
}

model PalletLayer {
  id           String @id @default(cuid())
  palletId     String
  layerIndex   Int
  weightLbs    Float
  notes        String?
  maxLengthInches Float?
  overhangWarning Boolean? @default(false)
  pallet       Pallet @relation(fields: [palletId], references: [id])
  pieces       PalletPiece[]
}

model PalletPiece {
  id              String @id @default(cuid())
  palletLayerId   String
  shapeId         String
  quantity        Int
  weightPerPieceLbs Float
  totalWeightLbs  Float
  shapeLabel      String?
  layer           PalletLayer @relation(fields: [palletLayerId], references: [id])
  shape           Shape @relation(fields: [shapeId], references: [id])
}

model ProductionRun {
  id           String   @id @default(cuid())
  projectId    String
  shopId       String
  operatorId   String
  stockUsedIn  Float
  scrapLengthIn Float
  scrapPercent  Float?
  isScrapFree   Boolean @default(false)
  scrapFreeThresholdPercent Float?
  closedAt     DateTime @default(now())
  project      Project @relation(fields: [projectId], references: [id])
  shop         Shop    @relation(fields: [shopId], references: [id])
}

model PerceivedStretch {
  id       String @id @default(cuid())
  barSize  String
  angleDeg Float
  offsetIn Float
  isDefault Boolean @default(false)
}

model FeedDraw {
  id       String @id @default(cuid())
  barSize  String
  angleDeg Float
  drawIn   Float
  isDefault Boolean @default(false)
  isProvisional Boolean @default(false)
}

model MachineConfig {
  id       String @id @default(cuid())
  machineId String @unique
  mode     String
  offset4BarIn Float
  offset5BarIn Float
  offset6BarIn Float
  globalConfigOffsetIn Float
}

model ScrapRecord {
  id             String   @id @default(cuid())
  length         Float
  barSize        String
  stockRemaining Float
  reason         String
}

model FutureStockPiece {
  id                  String   @id @default(cuid())
  barSize             String
  length              Float
  location            String
  reservedForProjectId String?
}

model CallLog {
  id             String   @id @default(cuid())
  timestamp      DateTime @default(now())
  duration       Int
  outcome        String
  transcriptPath String?
  summary        String?
  disposition    String?
}

model Lead {
  id             String   @id @default(cuid())
  source         String
  shopName       String
  contactName    String
  contactRole    String
  contactEmail   String?
  contactPhone   String?
  region         String?
  workflowType   String?
  scrapPainLevel String?
  leadScore      Int?
  shopId         String?
  shop           Shop? @relation(fields: [shopId], references: [id])
  deals          Deal[]
}

model Deal {
  id                         String   @id @default(cuid())
  leadId                     String
  shopId                     String?
  status                     String
  expectedMonthlySeatCount   Int?
  expectedSeatPrice          Float?
  expectedNetRevenueAnnual   Float?
  commissionRateRep          Float?
  commissionRateMarketingFund Float?
  closedAt                   DateTime?
  lead                       Lead @relation(fields: [leadId], references: [id])
  commissionRecords          CommissionRecord[]
}

model CommissionRecord {
  id          String   @id @default(cuid())
  dealId      String
  salesContributorId String
  period      String
  netRevenue  Float
  rate        Float
  amount      Float
  type        String
  deal        Deal @relation(fields: [dealId], references: [id])
}

model MarketingFundLedger {
  id          String   @id @default(cuid())
  entryId     String
  type        String
  amount      Float
  description String
  timestamp   DateTime @default(now())
}

model RebarInventory {
  id                String @id @default(cuid())
  barDiameter       String
  barLength         Float
  quantityAvailable Int
  notes             String?
  cutRequests       CutRequest[]
}

model CutRequest {
  id             String @id @default(cuid())
  requestedLength Float
  diameter       String
  quantity       Int
  status         String @default("Pending")
  inventoryBarId String
  inventoryCheck Boolean @default(false)
  totalCutLength Float   @default(0)
  inventoryBar   RebarInventory @relation(fields: [inventoryBarId], references: [id])

  @@index([status])
  @@index([inventoryBarId])
}

model Job {
  id         String @id @default(cuid())
  jobName    String
  priority   Int
  status     String
  totalBars  Int   @default(0)
  totalScrap Float @default(0)
  bars       Bar[]

  @@index([status])
}

model Bar {
  id              String @id @default(cuid())
  jobId           String
  diameter        String
  length          Float
  bends           Int
  bendAngles      Json
  stretchAllowance Float
  cutLength       Float
  remainingLength Float
  scrapFlag       Boolean @default(false)
  operatorPrompt  String?
  job             Job    @relation(fields: [jobId], references: [id])
  cutPlans        CutPlan[] @relation("BarCutPlans")

  @@index([jobId])
  @@index([remainingLength])
}
